    <div class="d-flex justify-content-between align-items-center">
        <h3>MANAGE MODELS</h3>
        <button id="create-model" class="btn btn-sm btn-outline-dark">
            Create Model
        </button>
    </div>
    <hr />
    <div id="model-list">
        <table class="table">
            <thead>
                <tr>
                    <th>Sr.No</th>
                    <th>Model Name</th>
                    <th>Created At</th>
                </tr>
            </thead>
            <thead>
                <tr>
                    <td>1</td>
